<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Bar Marks</title>

	<link rel="shortcut icon" href="/martini-glass.ico">


	<!-- VENDOR STYLES -->

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://storage.googleapis.com/code.getmdl.io/1.0.5/material.indigo-pink.min.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
	<!-- APP STYLES -->
    <link rel="stylesheet" href="css/styles.css">

	<!-- VENDOR SCRIPTS -->

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<% gMaps %>&sensor=false&libraries=places"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>


    <!-- APP SCRYPTS -->
	<script src="/js/auth_val.js"></script>
    <script src="/js/app.js"></script>
     
</head>


<body>
	<!-- Nav-bar partial -->
	<% include ./_nav-bar.ejs %>


	<!-- NEW MARK FORM -->
	
		<div class="row"></div>

			<div class="col-sm-3 col-xs-12 col-lg-4">
			<div class="map-form">
				<label for="map-search">Where's the party?</label>
				<input type="text" id="map-search" class="form-control" name="business" placeholder="Stay away from tequila." autofocus>
			</div>
				<form id="new-mark-form">

					<!-- Hidden  -->
					<input type="hidden" id="mark-name" name="businessName" value="">
					<input type="hidden" id="mark-address" name="address" value="">
					<input type="hidden" id="mark-lat" name="latitude" value="">
					<input type="hidden" id="mark-lng" name="longitude" value="">

					<!-- Visible -->
					<div class="map-form">
						<label for="crowdLevel">How crowded is it?</label>
						<select id="crowdLevel" class="form-control" name="crowdLevel" required>
						  <option>Can't Breathe</option>
						  <option>Crowded</option>
						  <option>Lively</option>
						  <option>Chill</option>
						  <option>Deserted</option>
						</select>
					</div>
					<div class="map-form">
						<label for="lastSong">What's the like music right now?</label>
						<input type="text" id="lastSong" class="form-control" name="lastSong" placeholder="Hope it's Beyonce!">
						</div>
						<div class="map-form">
						<label for="happyHour">Whats the
						 Happy Hour?</label>
						<input type="text" id="happyHour" class="form-control" name="happyHour" placeholder="Are you a coupon queen?">
						</div>
						<div class="map-form">
						<label for="review">Review</label>
						<textarea id="review" class="form-control" rows="3" name="review"></textarea>
						</div>
						<div class="map-form">
						<button type="submit" id="map-submit-btn" class="btn btn-default form-control">Cheers!</button>
					</div>
				</form>
			</div><!-- form col ends -->

			<div class="container col-sm-9 col-xs-12 col-lg-8" id="map-box">
				<div id="map"></div>
			</div>
		</div><!-- row ends -->
 		<div class="row">
		<footer>
			
		</footer>
		</div>


	<!-- Login Modal -->

	<div class="modal fade" id="login-modal">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Login</h4>
	      </div>
	      <form id="login-form">
	      <div class="modal-body">
	      	<input type="email" class="form-control" name="email" placeholder="Email">

	      	<input type="password" class="form-control modal-form" name="password" placeholder="Password">	
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="submit" class="btn btn-primary modal-submit">Login</button>
	        </form>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<!-- Sign Up Modal -->

	<div class="modal fade " id="sign-up-modal">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Sign Up</h4>
	      </div>
	      	<form id="sign-up-form">
	      <div class="modal-body">
	        <input type="text" class="form-control" name="username" placeholder="Username">
	        <input type="email" class="form-control modal-form" name="email" placeholder="Email">
	        <input type="password" class="form-control modal-form" id="password" name="password" placeholder="Password">
	        <input type="password" class="form-control modal-form" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="submit" class="btn btn-primary modal-submit">Sign Up</button>
	        </form>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->


</body>
</html>